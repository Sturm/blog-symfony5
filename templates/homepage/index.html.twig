{% extends 'base.html.twig' %}

{% block title %}Strona główna - Hubert Rządziński{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('homepage') }}
{% endblock %}

{% block body %}
    <section class="hero d-flex align-items-center">
        <div class="container">
            <h1>Blog o programowaniu</h1>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-8 col-lg-8">
                    {% for article in articles %}
                        <article>
                            <h2>{{ article.title }}</h2>
                            {{ article.content|raw }}
                        </article>
                    {% endfor %}
                </div>
                <div class="col-sm-12 col-lg-2">
                    Side panel
                </div>
            </div>
        </div>
    </section>
{% endblock %}
